<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- General Settings -->
    <PreferenceCategory 
        android:title="@string/pref_title_general"
        android:key="pref_key_general_settings">
                
	</PreferenceCategory> 
	
    <!-- Data Usage Settings -->
    
    <PreferenceCategory
        android:title="@string/pref_title_data_usage"
        android:key="pref_key_data_usage">
        <CheckBoxPreference
            android:key="pref_key_disable_art_downloads"
            android:title="@string/pref_title_disable_network_requests"
			android:defaultValue="false"
            />        
    </PreferenceCategory>
			
	<!-- Playback Settings Settings -->

	<PreferenceCategory
		android:title="@string/pref_title_playback_settings"
		android:key="pref_key_playback_settings"
	/>
	<CheckBoxPreference
		android:key="pref_key_add_all_to_queue"
		android:title="@string/pref_title_add_all_to_queue"
		android:summary="@string/pref_summary_add_all_to_queue"
		android:defaultValue="false"
	/>
    
</PreferenceScreen>
