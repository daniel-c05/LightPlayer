<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <ImageView
        android:id="@+id/album_group_thumb"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="4dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"      
        android:src="@drawable/dummy_thumb" />    

    <TextView
        android:id="@+id/album_group_album"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/album_group_thumb"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:gravity="center_vertical"
        android:text="Medium Text"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/album_group_artist"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_below="@+id/album_group_album"
        android:layout_toRightOf="@+id/album_group_thumb"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:padding="2dp"
        android:text="Small Text"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="#808080" />

    <ImageView
        android:id="@+id/group_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="4dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/navigation_expand_32" />
    

</RelativeLayout>